                            <button id="" class="hiden">submit</button>
                            <div class="separador" style="width: 80%; margin-left:20%;"></div>
                        </form>
                    </li>
                    -->
                </ul>
            </main>
            <footer>
                <article class="content-horizontal content-right">
                    <div>
                        <button onclick="modeLightTheme()">light</button>
                    </div>
                    <div>
                        <form class="footerRightElement" action="/logout?_method=DELETE" method="post">
                            <button class="nav link text-16 font-Major-exit" style="text-align:right;">exit</button>
                        </form>
                    </div>
                </article>
            </footer>
        </section>
    </div>
    <div id="/backlog" class="fullView">
        <section class="content-right">
            <header>
                <nav id="containerNavPages" class="content-horizontal content-right">
                    <h4 style="width: 100px;"><a class="link font-Major" href="#/backlog">Backlog</a></h4>
                    <h4 style="width: 100px;"><a class="link" href="#/bootak">Bootak</a></h4>
                    <h4 style="width: 100px;"><a class="link" href="#">Play</a></h4>
                    <h4 style="width: 100px;"><a class="link" href="#/stream">Stream</a></h4>
                </nav>
            </header>
            <main>
                <h1>BACKLOG</h1>
            </main>
        </section>
    </div>
    <div id="/bootak" class="fullView">
        <section class="content-right">
            <header>
                <nav id="containerNavPages" class="content-horizontal content-right">
                    <h4 style="width: 100px;"><a class="link" href="#/backlog">Backlog</a></h4>
                    <h4 style="width: 100px;"><a class="link font-Major" href="#/bootak">Bootak</a></h4>
                    <h4 style="width: 100px;"><a class="link" href="#">Play</a></h4>
