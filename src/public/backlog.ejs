<body><!--body> onload="clockDinamic();">-->
    <div id="bodyGame" class="fullView">
        <!-- Content LEFT -->
        <section class="content-left">
            <header>
                <nav id="containerFiltersPendingEvents-bodyGame-rename" class="containerFilters">
                    <button id="filterPeriod" class="oval negro" style="width: 100px;">All</button>
                    <button id="filterType" class="oval negro" style="width: 180px;">Type: Transitory</button>
                </nav>
            </header>
            <main>
                <article id="containerNewEventForm-bodyGame" class="plomo invisible">
