                        <!--: <input id="newAllottedTimeInputBodyGamee" class="text-16" style="width: 5%;" type="text" placeholder="min">-->
                        <br>
                        <input id="newDescriptionEventInputBodyGame" class="text-16" style="width: 80%; margin-bottom: 20px;" type="text" placeholder="Description" spellcheck="false">
                        <button class="hiden">submit</button>
                        <svg class="separador" width="100%" height="2">
                            <line x1="0" y1="2.5" x2="80%" y2="2.5" stroke="black" stroke-width="2" stroke-dasharray="2 8" stroke-linecap="round"/>
                        </svg>                          
                    </form>
                </article>
                <ul id="containerEventsListPending" class="scrollHiden-bodyGame-left">
                    <h2 class="font-400 text-18" style="margin-left:30px">Loading...</h2>
                    <li id="eventPending" class="content-horizontal plomo invisible">
                        <!--
                        <button id="btn-delete-eventPending" class="rojo invisible"></button>
                        <form action="" class="w-100">
                            <input class="uppercase font-400 text-18" type="text" value="NOMBRE DE TAREA" spellcheck="false">
                            <textarea class="text-16" name="" id="" cols="30" rows="2" spellcheck="false">Esto es una descripcion pero una tarea importante</textarea>
                            <button class="hiden">submit</button>
                            <div class="separador"></div>
                        </form>
                        <button id="btn-play-eventPending" class="lechuga invisible"></button>
                        -->
                    </li>
                </ul>
            </main>
            <footer>
                <nav class="content-horizontal">
                    <h6 id="PlayerNameContainer" class="footerRightElement text-16" style="padding-right: 0px;"><a id="PlayerName" class="link font-Major" href="#">@<%= PlayerName %></a> -></h6>
                    <h6 id="ChosenTeamContainer" class="footerRightElement text-16" style="padding: 0x;"><a id="chosenTeam" class="link font-Major" href="#"> <%= TeamName %></a></h6>
                </nav>
            </footer>
        </section>
        <!-- Content CENTER -->
        <section id="timeGame-events" style="margin: 0px 15px;">
            <header>
                <nav id="containerButtonsClockGame" class="center-absolut content-horizontal">
                    <button id="" class="square-M lechuga" style="color: black;"><div id="pomodoroLechuga"></div><div id="pomodoroLechugaHidden" style="display: none;"></div></button>
                    <button id="" class="square-M lila"></button>
                    <h3 id="clockGame" class="font-Major">00:00</h3>
                </nav>
                <article id="containerCalendarClockGame" class="content-horizontal">
                    <div id="calendar" class="">
                        <h1 id="day" class="text-28 font-400">00</h1>
                        <h5 id="month">Mes</h5>
                        <h4 id="weekendDay">Dia</h4>
                        <button id="PreviousDay" class="lila" style="width:40px; padding:10px 32px 5px 0px; background: none;">
                            <svg width="6" height="14" viewBox="0 0 6 14" fill="none" xmlns="http://www.w3.org/2000/svg">
